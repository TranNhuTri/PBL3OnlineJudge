@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
}
@using PBL3.Models
@model Account

<div class="grid">
    <div class="postPage-layout">
        <div class="grid_row">
            <div class="grid_column-6 postPage">
                <div class="infor">
                    <h3 class="infor__title">Thông tin người dùng</h3>
                    <form class="infor__content" asp-for="EditProfile" method="POST">
                        <div class="infor__content--avatar" style="background-image: url(https://codelearn.io/Themes/TheCodeCampPro/Resources/Images/code-learn/img-preview-bg.png);"></div>
                        <div class="infor__content--input">
                            <div class="input-row">
                                <label for="" class="input__title" >Tên tài khoản</label>
                                <input type="text" placeholder="" asp-for="accountName" readonly>
                            </div>
                            <div class="input-row">
                                <label for="" class="input__title">Họ</label>
                                <input type="text" placeholder="" asp-for="lastName">
                            </div>
                            <div class="input-row">
                                <label for="" class="input__title">Tên</label>
                                <input type="text" placeholder="" asp-for="firstName">                                   
                            </div>
                            <div class="input-row">
                                <label for="" class="input__title">Email</label>
                                <input type="text" placeholder="" asp-for="email">                                 
                            </div>
                            <div class="infor__function">
                                <a href="" class="infor__function--link password">Đổi mật khẩu</a>
                            </div>
                            <div class="infor__save">
                                <button class="infor__save--button button">Lưu thay đổi</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>