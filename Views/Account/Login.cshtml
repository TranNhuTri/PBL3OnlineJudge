@{
    ViewData["Title"] = "Login";
}
<div class="LoginPage">
    <div class="grid">
        <div class="grid_row">
            <div class="grid_column">
                <div class="Login">
                    <h2 class="Login_Title">Đăng nhập</h2>
                    <p class="Login_Disc">CodeTop1 là trang web học thuật toán miễn phí. Đăng nhập để cùng nhau học tập, đóng góp và chia sẻ kiến thức ❤️</p>
                    <div class="button LoginButton">
                            <img class="LoginButton_Icon" src="data:image/svg+xml;charset=utf-8,%3Csvg width='18' height='18' viewBox='0 0 18 18' xmlns='http://www.w3.org/2000/svg'%3E%3Ctitle%3EShape%3C/title%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cpath d='M17.64 9.205c0-.639-.057-1.252-.164-1.841H9v3.481h4.844a4.14 4.14 0 0 1-1.796 2.716v2.259h2.908c1.702-1.567 2.684-3.875 2.684-6.615z' fill='%234285F4'/%3E%3Cpath d='M9 18c2.43 0 4.467-.806 5.956-2.18l-2.908-2.259c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.711H.957v2.332A8.997 8.997 0 0 0 9 18z' fill='%2334A853'/%3E%3Cpath d='M3.964 10.71A5.41 5.41 0 0 1 3.682 9c0-.593.102-1.17.282-1.71V4.958H.957A8.996 8.996 0 0 0 0 9c0 1.452.348 2.827.957 4.042l3.007-2.332z' fill='%23FBBC05'/%3E%3Cpath d='M9 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.463.891 11.426 0 9 0A8.997 8.997 0 0 0 .957 4.958L3.964 7.29C4.672 5.163 6.656 3.58 9 3.58z' fill='%23EA4335'/%3E%3Cpath d='M0 0h18v18H0z'/%3E%3C/g%3E%3C/svg%3E">
                            <p class = "LoginButton_Text">Đăng nhập với Google</p>
                    </div>
                    @* <div class="button LoginButton">
                            <img class="LoginButton_Icon" src="/img/fb-logo.png">
                            <p class = "LoginButton_Text">Đăng nhập với Facebook</p>
                    </div> *@
                    <div class="OR">
                        <span class = "OR_Text">HOẶC</span>
                    </div>
                    <form asp-action = "Login">
                        <div class="Login_Input">
                            <label for="email" class="Login_Input_Title">
                                Tên tài khoản / Email
                            </label>
                            <input type="input" name="accountName" id = "email" placeholder="VD:tranhutri@codetop1.com">
                        </div>
                        <div class="Login_Input">
                            <label for="password" class="Login_Input_Title">
                                Mật khẩu
                            </label>
                            <input type="password" name="passWord" id = "password" placeholder="Nhập mật khẩu">
                        </div>
                        <input type="submit" id = "LoginSubmitButton" value="Đăng nhập">
                    </form>
                    <a class="ForgotPass"href="">Quên mật khẩu ?</a>
                    <div >
                        <p class="Question">Bạn chưa có tài khoản?</p>
                        <a class="Register" href="/Account/SignUp">Đăng kí trải nghiệm ngay!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>