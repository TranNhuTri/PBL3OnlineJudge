@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Xóa bài tập";
}
@using PBL3.Models
@model Submission
<div class="grow">
    <div class="grid_row">
        <div class="grid_column">
            <div class="deletePage">
                <div class="deletePage_header">
                    <h1>Xác nhận xóa bài nộp @Model.ID của bài tập @Model.problem.title bởi @Model.account.accountName</h1>
                </div>
                <div class="deletePage_input">
                    <p class="deletePage_warning">
                        Việc xóa bài nộp có thể dẫn tới mất các dữ liệu sau !!!
                    </p>
                    <p>Các kết quả :</p>
                    <table cellspacing="0" cellpadding="0" class="table" style="border: 1px solid #cccccc6e">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Trạng thái
                                </th>
                                <th>
                                    Thời gian thực hiện
                                </th>
                                <th>
                                    Bộ nhớ
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for(int i = 0; i < Model.submissionResults.Count; i++)
                            {
                                <tr>
                                    <td> @(i + 1)</td>
                                    <td>@Model.submissionResults[i].status</td>
                                    <td>@Model.submissionResults[i].excuteTime</td>
                                    <td>@Model.submissionResults[i].memory</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <form asp-action = "DeleteSubmission" asp-route-id="@Model.ID">
                        <div class="formSubmitGroup" style="position: sticky; bottom: 0; background-color: #fff">
                            <div class="formSubmit">
                                <button type="submit" class="submitButton button" style="background-color: #dc3545">
                                    <i class="fas fa-trash-alt"></i>
                                    <p>Xóa bài tập</p>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="overlay">
    <div class="detailSubmissionContainer">
        <i class="fas fa-times detailSubmissionIcon"></i>
        <div class="detailSubmissionContent">
        </div>
    </div>
</div>
@section Scripts
{
    <script src = "/js/Submission.js"></script>
}