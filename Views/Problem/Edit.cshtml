@{
    ViewData["Title"] = "Sửa đề bài";
    if(!String.IsNullOrEmpty(Model.Content))
        Model.Content = Model.Content.Replace("$", "~");
    var listAuthors = (List<User>)ViewData["ListAuthors"];
    var listCategories = (List<Category>)ViewData["ListCategories"];
    var listChosenAuthors = (List<int>)ViewData["ListChosenAuthors"];
    var listChosenCategories = (List<int>)ViewData["ListChosenCategories"];
}
@model Problem
<div class="Create-EditProblemPage">
    <div class="grid">
        <div class="grid_row">
            <div class="grid_column">
                <div class="Create-EditProblemPage_Input">
                    <h1 class="Create-EditProblemPage_Header">Tạo bài mới</h1>
                    <form asp-action = "edit">
                        <div class="FormGroup">
                            <label for="ID">Mã bài :</label>
                            <input type="text" asp-for = "ID">
                        </div>
                        <div class="FormGroup">
                            <label for="Tilte">Tên bài :</label>
                            <input type="text" asp-for = "Title">
                        </div>
                        <div class = "FormGroup">
                            <label for="Authors">Tác giả :</label>
                            <div class="select-box">
                                <select name="Authors" id="Authors" multiple>
                                    @if(listAuthors != null)
                                    {
                                        @if(listChosenAuthors != null)
                                        {
                                            @foreach (var user in listAuthors)
                                            {
                                                if(listChosenAuthors.IndexOf(user.ID) != -1)
                                                {
                                                    <option value="@user.ID" selected>@user.UserName</option>
                                                }
                                                else
                                                {
                                                    <option value="@user.ID">@user.UserName</option>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            @foreach (var user in listAuthors)
                                            {
                                                <option value="@user.ID">@user.UserName</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="FormGroup">
                            <label>Đề bài :</label>
                            <div class="Editor">
                                <textarea name="Content" id="editor" rows="10" cols="80">
                                </textarea>
                            </div>
                            <div class="Preview">
                                <div class="PreviewButton" id = "PreviewButton">
                                    Update Preview
                                </div>
                                <div class="PreviewContent">
                                </div>
                                <div class="PreviewContent--Hidden" style="display: none;">
                                    @Model.Content
                                </div>
                            </div>
                        </div>
                        <div class = "FormGroup">
                            <label for="Categories">Tác giả :</label>
                            <div class="select-box">
                                <select name="Categories" id="Categories" multiple>
                                    @if(listCategories != null)
                                    {
                                        @if(listChosenAuthors != null)
                                        {
                                            @foreach (var cate in listCategories)
                                            {
                                                if(listChosenCategories.IndexOf(cate.ID) != -1)
                                                {
                                                    <option value="@cate.ID" selected>@cate.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@cate.ID">@cate.Name</option>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            @foreach (var cate in listCategories)
                                            {
                                                <option value="@cate.ID">@cate.Name</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class = "FormGroup">
                            <input type="checkbox" asp-for = "Public" style="width: 15px;" value = "True">
                            <label for="Public">Công khai</label>
                        </div>
                        <div class="FormGroup">
                            <label for="TimeLimit">Giới hạn thời gian :</label>
                            <input type="text" asp-for = "TimeLimit"><span style="margin-left: 10px; color: #7b7b7b">s</span>
                        </div>
                        <div class="FormGroup">
                            <label for="MemoryLimit">Giới hạn bộ nhớ :</label>
                            <input type="text" asp-for = "MemoryLimit"><span style="margin-left: 10px; color: #7b7b7b">KB</span>
                        </div>
                        <div class="FormGroup">
                            <label for="Difficulity">Độ khó :</label>
                            <input type="text" asp-for = "Difficulty">
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="FormSubmit">
                            <input type="submit" value = "Lưu thay đổi" class="CreateProblemSubmit button">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" charset="utf-8">
        var previewBtn = document.getElementById("PreviewButton");

        var previewContent = document.getElementsByClassName("PreviewContent")[0];
        var content = document.getElementsByClassName("PreviewContent--Hidden")[0].innerHTML.replaceAll("~", "$");
        var div = document.createElement("div");
        div.innerHTML = content;

        CKEDITOR.replace('editor');
        previewBtn.addEventListener('click', function(e)
        {
            var html = CKEDITOR.instances.editor.getData();

            html = html.replaceAll("~", "$");

            previewContent.innerHTML = html;

            document.querySelectorAll('pre code').forEach((block) => {
                hljs.highlightBlock(block);
            });

            CKEDITOR.instances.editor.setData("", function()
            {
                CKEDITOR.instances.editor.insertHtml(html);
                let frame = document.querySelector(".cke_wysiwyg_frame");
                let css = '<style>code {padding: 20px !important;border: 1px solid #ccc;border-radius: 4px;background-color: #f0f0f029 !important;}</style>'
                frame.contentWindow.document.querySelector("head").innerHTML += css;
            });

            document.querySelectorAll('pre code').forEach((block) => {
                if(block.classList == "")
                    block.classList.add("plaintext");
                hljs.highlightBlock(block);
            });
                
            MathJax.Hub.Queue(["Typeset", MathJax.Hub]);
        });
        CKEDITOR.on("instanceReady", function(event)
        {
            CKEDITOR.instances.editor.setData("", function()
            {
                CKEDITOR.instances.editor.insertHtml(div.innerText);
                previewBtn.click();
                var frame = document.querySelector(".cke_wysiwyg_frame");
                var css = '<style>code {padding: 20px !important;border: 1px solid #ccc;border-radius: 4px;background-color: #f0f0f029 !important;}</style>'
                frame.contentWindow.document.querySelector("head").innerHTML += css;
            });
        });
        new SlimSelect({
            select: '#Authors',
            placeholder: 'Chọn tác giả',
            searchText: 'Không thể tìm thấy',
        })
        new SlimSelect({
            select: '#Categories',
            placeholder: 'Chọn dạng bài',
            searchText: 'Không thể tìm thấy',
        })
    </script>
}